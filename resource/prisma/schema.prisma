datasource db {
  provider = "postgresql"
  url = env("DATABASE_URI")
}

generator client {
  provider = "prisma-client-js"
}

model seat {
  id Int @id @default(autoincrement())
  car_count Int
  seat_count Int
  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt
  deleted_at DateTime?
  shinkansen shinkansen[]
}

model shinkansen {
  id Int @id @default(autoincrement())
  seat_id Int @unique
  seat seat @relation(fields: [seat_id], references: [id], onDelete: Cascade)
  name String @unique
  picture String
  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt
  deleted_at DateTime?
  reservations reservation[]
}

model reservation {
  id Int @id @default(autoincrement())
  shinkansen_id Int
  shinkansen shinkansen @relation(fields: [shinkansen_id], references: [id], onDelete: Cascade)
  departure String
  destination String
  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt
  deleted_at DateTime?
}
